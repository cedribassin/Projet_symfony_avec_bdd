{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}
{% block monTitre %}Ma liste d'animaux{% endblock %}
{% block body %}
  {% for animal in animaux %}
    <div class="row align-items-center">
      <div class="col-2 text-center">
         <img src="{{ asset('images/' ~ animal.image) }}" >
      </div>
      <div class="col-auto">
        <!--On affiche la page animal en récupérant l'animal via l'id au niveau du controller-->
        <h2><a href="{{ path('afficher_animal',{'id': animal.id}) }}">{{animal.nom}}</a></h2>
        <div>{{animal.description}}</div>
      </div>

    </div>
  {% endfor %}
{% endblock %}
