{% extends 'base.html.twig' %}

{% block title %}Continent{% endblock %}
{% block monTitre %}Continent: {{continent.libelle}}{% endblock %}
{% block body %}
            <div class="row">
                {% for animal in continent.animaux %}
                    <div class="col-6">
                        <div class="row m-2">
                            <div class="col-12 col-md-6 col-lg-2 text-center">
                                <img src="{{ asset('images/' ~ animal.image) }}" class="img-fluid" >
                            </div>
                            <div class="col">
                                <!--On affiche la page animal en récupérant l'animal via l'id au niveau du controller-->
                                <h2><a href="{{ path('afficher_animal',{'id': animal.id}) }}">{{animal.nom}}</a></h2>
                                <div>{{animal.description}}</div>
                                <a href="{{ path('afficher_famille',{'id': animal.famille.id}) }}" class="btn btn-primary">{{animal.famille.libelle}}</a>
                                <div>
                                    {% for continentAnimal in animal.continents %}
                                    <!--Condition qui permet d'afficher les autres continents sauf celui de la page en cours-->
                                        {% if continentAnimal.id != continent.id %}
                                            <a href="{{ path('afficher_continent',{'id': continentAnimal.id}) }}" class="btn btn-warning m-2">{{continentAnimal.libelle}} </a>
                                        {% endif %}
                                    {% endfor %}
                                </div>    
    
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
{% endblock %}
